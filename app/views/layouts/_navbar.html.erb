<div class="ui inverted large menu">
    <div class="ui container">
        <%= link_to "Chatroom", root_path, class: "item" %>
        <a class="item">
            Messages
        </a>
        <div class="right menu">
            <% if !logged_in? %>
                <%= link_to "Log in", login_path, class: "item"%>
                <div class= "item">
                    <%= link_to "Sign up", signup_path, class: "ui primary button" %>
                </div>
            <% else %>
                <div class="ui dropdown item">
                    Account <i class="dropdown icon"></i>
                    <div class="menu">
                            <%= link_to "Log out", logout_path, method: :delete, class: "item"%>
                    </div>
                </div>
                    <% end %>
        </div>
    </div>
</div>
