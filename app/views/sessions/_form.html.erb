<div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
        <div class="column">
            <div class="ui form">
                <%= form_with(scope: :session, url: login_path, method: :post, local: true) do |f| %>
                    <div class="field">
                        <%= f.label :username %>
                        <div class="ui left icon input">
                            <%= f.text_field :username, placeholder: "Enter your email"%>
                            <i class="user icon"></i>
                        </div>
                    </div>
                    <div class="field">
                        <%= f.label :password %>
                        <div class="ui left icon input">
                        <%= f.password_field :password, placeholder: "Enter your password" %>
                        <i class="lock icon"></i>
                        </div>
                    </div>
                    <%= f.submit "Login", class:"ui blue button"%>
                <% end %>
            </div>
        </div>
        <div class="middle aligned column">
             <%= link_to signup_path do %>
                <div class="ui big blue button">
                    <i class="signup icon"></i>
                    Sign up
                </div>
            <% end %>
        </div>
    </div>
    <div class="ui vertical divider">
        Or
    </div>
</div>
