<%= render "shared/errors", obj: @errors %>
<div class="ui placeholder segment">
    <%= form_with(model: @user, local: true, class: "ui form") do |f|%>
        <div class="field">
            <%= f.label :username %>
            <div class="ui left icon input">
                <%= f.text_field :username, placeholder: "Create your username"%>
                <i class="user icon"></i>
            </div>
        </div>
        <div class="field">
            <%= f.label :password %>
            <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Create a password" %>
            <i class="lock icon"></i>
            </div>
        </div>
        <%= f.submit @user.new_record? ? "Sign up!" : "Edit information", class:"ui blue button"%>
    <% end %>
</div>
